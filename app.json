{
  "expo": {
    "name": "Employee Management System",
    "slug": "employee-management-system",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/appicon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.employeemanagement.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "employee-management-system",
            "CFBundleURLSchemes": ["employeemgmt"]
          }
        ]
      },
      "icon": "./assets/appicon.png"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.employeemanagement.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "icon": "./assets/appicon.png"
    },
    "web": {
      "favicon": "./assets/appicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router"
    ],
    "scheme": "employeemgmt",
    "privacy": "unlisted"
  }
}