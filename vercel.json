{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build:web",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "EXPO_PUBLIC_SUPABASE_URL": "@expo_public_supabase_url",
    "EXPO_PUBLIC_SUPABASE_ANON_KEY": "@expo_public_supabase_anon_key",
    "EXPO_PUBLIC_SENDGRID_API_KEY": "@expo_public_sendgrid_api_key",
    "EXPO_PUBLIC_SENDGRID_FROM_EMAIL": "@expo_public_sendgrid_from_email"
  }
} 